<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/rainbow_background"
    tools:context=".TakeExamActivity"
    android:id="@+id/relative_layout_exam">

    <TextView
        android:id="@+id/totalTimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/almendra"
        android:text="TIME REMAINING"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/timerExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalTimeLeft"
        android:layout_centerInParent="true"
        android:fontFamily="@font/almendra"
        android:text="15S"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/guessColor"
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/layout_under_radio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/guessColor"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/button_previous"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"/>

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_next"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"/>

        <Button
            android:id="@+id/buttonDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/button_done"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"/>
    </LinearLayout>


</RelativeLayout>